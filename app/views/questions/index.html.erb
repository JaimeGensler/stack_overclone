<h2>Questions</h2>

<% if @questions.any? %>
<ul>
    <% @questions.each do |question| %>
    <li><%= link_to question.title, question_path(question) %></li>
    <% end %>
</ul>
<% else %>
<p>There are no questions yet.</p>
<% end %>

<% if current_user %>
<p><%= link_to "Create new question", new_question_path %></p>
<% else %>
<p><%= link_to 'Sign in', '/signin' %> or <%= link_to 'sign up', '/signup' %> to add a question!</p>
<% end %>
